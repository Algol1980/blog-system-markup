{% extends "layout.twig" %}


{% block content %}
    <div class="container">


        {% if isGuest() %}
            <div class="jumbotron">
                <h1>Introduce cool blog system!</h1>
                <p>It's very cool and fun, try it!</p>
                <p><a class="btn btn-primary" href="/site/register">Start using!</a> or <a href="/site/login" class="btn btn-primary">Log in</a></p>
            </div>
        {% endif %}


        <h2>List of bloggers</h2>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Имя</th>
                <th>Количество записей</th>
                <th>Количество фото</th>
            </tr>
            </thead>
            <tbody>

            {% for user in users %}
                <tr>
                    <td>
                        <a href="blog/index/{{ user.getId() }}">{{ user.getFirstName() }} {{ user.getLastName() }}</a>
                    </td>
                    <td>
                        {{ user.countPosts }}
                    </td>
                    <td>
                        {{ user.countImages }}
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

    </div>

{% endblock %}